<!DOCTYPE html>
<html>
  <head>
    <title>PersonalityTestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <nav class="navbar navbar-light">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Personality Test</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= link_to 'Edit profile', edit_user_registration_path, class: 'nav-item' %> |
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-item'  %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: 'nav-item'  %> |
            <%= link_to "Login", new_user_session_path, class: 'nav-item'  %>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
